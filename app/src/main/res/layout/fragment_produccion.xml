                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/conten_monto_vendidos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/conten_vendidos"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_monto_montas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_monto_ventas"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/monto_montas"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/conten_monto_montas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/conten_monto_vendidos"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_monto_montas"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/total"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/conten_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/conten_monto_montas"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/numero_seis"
                        android:textSize="18sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>