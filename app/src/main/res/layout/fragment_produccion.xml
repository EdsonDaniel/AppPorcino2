            <ImageView
                android:layout_marginTop="14dp"
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_marginStart="6dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/dinero"
                android:contentDescription="@string/foto" />
                !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp">

                    <TextView
                        android:id="@+id/titulo"
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:text="@string/detalles_produccion"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/label_total_animales"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/titulo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/total_animales"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/conten_total_ani"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/titulo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_hembras"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_total_animales"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/hembras"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_total_hembras"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_hembras"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/total_hembras"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/conten_total_hembras"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_hembras"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_cargadas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_total_hembras"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/hembras_cargadas"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/conten_cargadas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/conten_total_hembras"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_lactando"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_cargadas"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/lactando"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/conten_lactando"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/conten_cargadas"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_semen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_lactando"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/sementales"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_sementales"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_semen"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/total_sementales"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/conten_sementales"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_semen"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_en_engorda"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_sementales"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/en_engorda"
