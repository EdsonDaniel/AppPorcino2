                    <TextView
                        android:id="@+id/label_ingresos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_engorda"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/ventas_ingresos"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_vendidos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_ingresos"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/total_vendidos"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/conten_vendidos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="45dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_ingresos"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/numero_seis"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/label_monto_ventas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/label_vendidos"
